<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/about_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/i_am"
        android:textColor="@color/fab_primary_color"
        android:textSize="42sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/close_dialog_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/icon_close"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/text_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/about_header"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat"
        android:lines="3"
        android:text="@string/about_me"
        android:textColor="@color/less_dark_gray"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/share_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_two"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/transparent_background"
        android:drawablePadding="8dp"
        android:elevation="8dp"
        android:fontFamily="@font/montserrat"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="@string/share"
        android:textAllCaps="false"
        android:textColor="@color/fab_primary_color"
        android:textSize="16sp"
        app:drawableTint="@color/header_color"
        app:drawableStartCompat="@drawable/ic_share_2" />

    <TextView
        android:id="@+id/github_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_app"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/transparent_background"
        android:drawablePadding="8dp"
        android:elevation="8dp"
        android:fontFamily="@font/montserrat"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="@string/github_txt"
        android:textAllCaps="false"
        android:textColor="@color/fab_primary_color"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_github"
        app:drawableTint="@color/header_color" />

    <TextView
        android:id="@+id/playstore_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/github_link"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/transparent_background"
        android:drawablePadding="8dp"
        android:elevation="8dp"
        android:fontFamily="@font/montserrat"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:text="@string/play_store_txt"
        android:textAllCaps="false"
        android:textColor="@color/fab_primary_color"
        android:textSize="16sp"
        app:drawableStartCompat="@drawable/ic_playstore"
        app:drawableTint="@color/header_color" />

</RelativeLayout>
